<Window x:Class="WpfApp1.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Product Name:" Margin="0,5"/>
            <TextBox Name="ProductNameTextBox" Margin="0,5"/>

            <TextBlock Text="Product Description:" Margin="0,5"/>
            <TextBox Name="ProductDescriptionTextBox" Margin="0,5"/>

            <TextBlock Text="Product Price:" Margin="0,5"/>
            <TextBox Name="ProductPriceTextBox" Margin="0,5"/>

            <TextBlock Text="Product Image:" Margin="0,5"/>
            <Button Content="Upload Image" Click="UploadImageButton_Click" Margin="0,5"/>
            <Image Name="ProductImage" Height="100" Margin="0,5"/>

            <Button Content="Add Product" Click="AddProductButton_Click" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
